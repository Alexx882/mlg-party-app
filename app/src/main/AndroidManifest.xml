<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="at.aau.ase.mlg_party_app">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".quiz.QuizGame" />
        <activity android:name=".rps.RpsGame" />
        <activity android:name=".spacepirate.GameActivity"/>
        <activity android:name=".clicker.ClickerGame"/>
        <activity android:name=".cocktail_shaker.CocktailShakerActivity"/>
        <activity android:name=".game_setup.BetweenGamesActivity"/>
        <activity android:name=".game_setup.JoinGameActivity" />
        <activity android:name=".game_setup.NewGameActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
    </application>

</manifest>